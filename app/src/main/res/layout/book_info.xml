<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="6dip">

    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/textViewTitle" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/key_title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView android:id="@+id/textViewAuthor" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/key_author"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/textViewTitleValue" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView android:id="@+id/textViewAuthorValue" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</LinearLayout>