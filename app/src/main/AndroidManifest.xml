<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.b_team.b_team_app">

    <!-- TODO: Set allowBackup to true for release version -->
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_nerdy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_nerdy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookEditActivity"
            android:label="@string/app_name" />

        <provider
            android:name=".BookProvider"
            android:authorities="com.b_team.bookprovider"
            android:exported="true"
            android:readPermission="true"
            android:writePermission="true" />

        <activity
            android:name=".SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PageCountEdit" android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>